<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#F7F7F7">

    <!-- ▣ 상단: 배터리 + 네트워크 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_marginBottom="6dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <ImageView
            android:id="@+id/ivBatteryIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_lock_idle_charging" />

        <ProgressBar
            android:id="@+id/batteryProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:progress="100"
            android:progressTint="#4CAF50" />

        <TextView
            android:id="@+id/tvBattery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textSize="14sp"
            android:layout_marginStart="6dp" />

        <ImageView
            android:id="@+id/ivNetworkIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_dialog_info"
            android:layout_marginStart="12dp" />

        <TextView
            android:id="@+id/tvNetwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="네트워크: 대기"
            android:textSize="14sp"
            android:layout_marginStart="6dp" />

        <Button
            android:id="@+id/btnEmergency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="긴급 정지"
            android:textColor="#FFFFFF"
            android:backgroundTint="#F44336"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <!-- ▣ 중앙: 카메라 + 상태 -->
    <!-- ▣ 중앙: 카메라 + 상태 오버레이 -->
    <FrameLayout
        android:id="@+id/centerFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#000000">

        <ImageView
            android:id="@+id/ivCameraPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="Camera / Map placeholder"
            android:background="#333333"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_gravity="top|start"
            android:background="#66000000"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/tvStatus"
                android:text="상태: 대기 중"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvOdom"
                android:text="속도: 0.0 m/s 거리: 0.0 m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tvImu"
                android:text="IMU: 0.0°, 0.0°, 0.0°"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/layoutStartButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:clickable="true"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="67dp"
                    android:layout_height="63dp"
                    android:background="@drawable/rounded_background_grey"
                    android:contentDescription="주행 시작"
                    android:padding="8dp"
                    android:src="@drawable/baseline_car"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주행 시작"
                    android:textSize="14sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutStopButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:clickable="true"
                android:padding="8dp"
                android:layout_marginStart="12dp"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="66dp"
                    android:layout_height="64dp"
                    android:background="@drawable/rounded_background_grey"
                    android:contentDescription="정지"
                    android:padding="8dp"
                    android:src="@drawable/baseline_stop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="정지"
                    android:textSize="14sp"
                    android:textColor="#FF9800"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:id="@+id/layoutSpeedDownButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:clickable="true"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="67dp"
                    android:background="@drawable/rounded_background_blue"
                    android:contentDescription="감속"
                    android:padding="8dp"
                    android:src="@drawable/baseline_speeddown"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="감속"
                    android:textSize="14sp"
                    android:textColor="#2196F3"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutSpeedUpButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:clickable="true"
                android:padding="8dp"
                android:layout_marginStart="12dp"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="68dp"
                    android:background="@drawable/rounded_background_red"
                    android:contentDescription="가속"
                    android:padding="8dp"
                    android:src="@drawable/baseline_speedup" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="가속"
                    android:textColor="#FF0000"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- 차선 이동 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:padding="12dp"
        android:background="#FFFFFF">

        <ImageButton
            android:id="@+id/btnLeft"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="120dp"
            android:backgroundTint="#00FF00"
            android:contentDescription="좌회전"
            android:src="@drawable/baseline_arrow_back_24" />

        <ImageButton
            android:id="@+id/btnRight"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/baseline_arrow_forward_24"
            android:backgroundTint="#00FF00"
            android:contentDescription="우회전" />
    </LinearLayout>

</LinearLayout>


